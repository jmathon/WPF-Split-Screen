<Window x:Class="WPFTry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WPFTry"
        xmlns:views="clr-namespace:WPFTry.Views"
        Title="MainWindow" Height="350" Width="525" ResizeMode="NoResize" WindowState="Maximized" Opacity="0.5" WindowStyle="None" Background="#FFFBFBFB" AllowsTransparency="True"
        x:Name="MWin" Topmost="True">
    <Window.DataContext>
        <local:GridViewModel/>
    </Window.DataContext>
    <views:GridZone DataContext="{Binding DataContext, ElementName=MWin}" />
</Window>
